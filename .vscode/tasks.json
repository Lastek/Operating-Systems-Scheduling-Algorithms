{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "-std=c++17",
                "-Wall",
               "Scheduler.cc",
               "debug.cc",
               "util.cc", 
                "-o",
                "${workspaceFolder}/Scheduler"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}